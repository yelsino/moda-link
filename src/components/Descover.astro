---

<section class="px-5 flex flex-col gap-y-5 my-6">
  <h2
    class="text-2xl leading-tight tracking-tight md:text-3xl font-fugazOne 2xl:text-center"
  >
    {discoveries[lang].title}
  </h2>
  <ul class="flex flex-wrap gap-2">
    {
      discoveries[lang].tags.map((tag) => (
        <li>
          <a
            aria-label={tag.tag}
            class="transition group inline-grid grid-flow-col justify-center items-center rounded-lg   bg-white  hover:text-color_pink1 border border-neutral-200 hover:border-color_pink1 py-2 px-5 gap-2 ease-in-out duration-300 text-sm md:text-base"
            href={tag.url}
          >
            {tag.tag}
          </a>
        </li>
      ))
    }
  </ul>
</section>
